        call BufferWriter.assign_content(bufnr, content)
        Assert Equals(getbufvar(bufnr, '&fileencoding', &encoding), 'cp1250')
        Assert Equals(getbufline(bufnr, 1, '$'), [
              \ 'Unix EOL',
